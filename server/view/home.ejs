<style>
  .A.card{display:flex;flex-wrap:wrap}
  .A.card .e{width:100%;max-width:350px;overflow:hidden;margin:0 20px 20px;background-color:#fff;border-radius:5px}
  .A.card .img{position:relative;padding-bottom:70%}
  .A.card .img img{position:absolute;width:100%;height:100%;z-index:1}
  .A.card .img .month{position:absolute;width:40px;line-height:40px;height:40px;font-size:28px;color:#fff;font-family:"Arial";text-align:center;top:0;right:0;background-color:green;z-index:1}
  .A.card .img .month.m_1{background-color:#ED5565}
  .A.card .img .month.m_2{background-color:#FC6E51}
  .A.card .img .month.m_3{background-color:#FFCE54}
  .A.card .img .month.m_4{background-color:#A0D468}
  .A.card .img .month.m_5{background-color:#48CFAD}
  .A.card .img .month.m_6{background-color:#4FC1E9}
  .A.card .img .month.m_7{background-color:#5D9CEC}
  .A.card .img .month.m_8{background-color:#AC92EC}
  .A.card .img .month.m_9{background-color:#EC87C0}
  .A.card .img .month.m_10{background-color:#E6E9ED}
  .A.card .img .month.m_11{background-color:#AAB2BD}
  .A.card .img .month.m_12{background-color:#434A54}
  .A.card .info{position:relative;height:45px;padding:15px 15px 15px 70px}
  .A.card .info img{position:absolute;height:45px;height:45px;top:15px;left:10px;border-radius:50%}
  .A.card .info .name{font-size:14px;line-height:25px}
  .A.card .info .time{color:#6c757d}
  .A.card .text{padding:15px;border-top:1px solid #ebedf2}
  .A.card .text .utitle{color:#05b4d8;margin-bottom:10px}
  .A.card .text .tname{font-size:16px;height:24px;margin-bottom:5px}
  .A.card .text .tmsg{height:36px;margin-bottom:10px}
  .A.card .text .link{display:inline-block;line-height:20px;height:20px;color:#fff;text-decoration:none;padding:5px 13px;background-color:#177dff;border-radius:20px}
</style>
</head>
<body>
  <div class="A card">
    <% data.forEach(function(val) { %>
      <div class="e">
        <div class="img">
          <img src="http://127.0.0.1:3000/file/<%= val.filename %>/index.png" alt="" />
          <p class="month m_<%= val.month %>"><%= val.month %></p>
        </div>
        <div class="info">
          <img src="http://127.0.0.1:3000/uimg/<%= val.uid %>.jpg" alt="" />
          <p class="name"><%= val.name %></p>
          <p class="time">最后编辑于：<%= val._time %></p>
        </div>
        <div class="text">
          <p class="utitle"><%= val.post %></p>
          <p class="tname at"><%= val.title %></p>
          <p class="tmsg at2"><%= val.description %><%= val.description %></p>
          <a class="link" target="_blank" href="http://127.0.0.1:3000/file/<%= val.filename %>/index.html">查看更多</a>
        </div>
      </div>
    <% }) %>

